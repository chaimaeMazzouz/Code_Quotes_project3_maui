<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Code_Quotes_project3_maui.MainPage">

    <Grid x:Name="background">
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,1">
                <GradientStopCollection>
                    <GradientStop Offset="0.0" Color="#051937"/>
                    <GradientStop Offset="0.25" Color="#004d7a"/>
                    <GradientStop Offset="0.50" Color="#008793"/>
                    <GradientStop Offset="0.75" Color="#00bf72"/>
                    <GradientStop Offset="1" Color="#a8eb12"/>
                </GradientStopCollection>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid RowDefinitions=".8*,.2*" Margin="25">
            <Label FontSize="50"
                   FontFamily="MainFont"
                   Text="They don't make bugs like Banny anymore. - Olav Mejlde"
                   HorizontalTextAlignment="Center"
                   TextColor="White"
                   VerticalOptions="Center"
                   x:Name="lblQuotes"/>
            <Button Grid.Row="1"
                    Opacity=".4"
                    Background="Black"
                    x:Name="btnGenerateQuote"
                    Clicked="btnGenerateQuote_Clicked"
                    Text="Get new Quote!"/>
        </Grid>
    </Grid>
</ContentPage>
